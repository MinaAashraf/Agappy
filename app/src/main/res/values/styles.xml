<resources>

    <!-- Base application theme. -->
    <style name="AppThemeNoBar" parent="Theme.AppCompat.Light.DarkActionBar">        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/background_material_dark</item>

    </style>


    <style name="AppThemeNoBar." parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>

    </style>

    <style name="AppThemeNoBar.." parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

    </style>

    <style name="AppThemeNoBar..NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeNoBar..AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppThemeNoBar..PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="dialog">
        <item name="android:color">@color/dialog</item>
    </style>
    
    <style name="NavigationondrawerStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>

    </style>
    <style name="TitleAppearance">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#a39a9a</item>
    </style>
</resources>
